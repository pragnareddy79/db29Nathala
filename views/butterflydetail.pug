extends layout
block content
    h1= title
    if (toShow == null)
        h2 No instance to delete
    - let butterflyid = toShow._id
    - let butterflySize = toShow.Size
    - let butterflycolor = toShow.color
    - let butterflyprice = toShow.price
    div
        div.row
            div(class='butterflyAttr mr-3') butterfly ID is:
            div(class='variety stylesheetnew') #{butterflyid}
        div.row
            div(class='butterflyAttr mr-3') butterfly Size is:
            div(class="variety stylesheetnew") #{butterflySize}
        div.row
            div(class='butterflyAttr mr-3') butterfly color is:
            div(class="variety stylesheetnew") #{butterflycolor}
        div.row
            div(class='butterflyAttr mr-3') butterfly price is:
            div(class="variety stylesheetnew") #{butterflyprice}