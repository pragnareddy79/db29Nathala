extends layout

block content
  h1= title
    - let butterflys  =[{Size:"small",color:"Red",price:1000},{Size:"Medium",color:"Black",price:2000},{Size:"Large",color:"White",price:5000}]
  div(class="container-fluid mt-3")
  div(class="row m-1")
    each butterfly,index in butterflys  
     - let destination = `dispatch(\"/butterfly/update?id=${butterfly._id}\")`
        div(class="col-sm-2" onclick=`buy(${index})`) #{butterfly.Size} - #{butterfly.color} - #{butterfly.price} 
         button.btn( class="btn-primary ml-1", onclick= destination) Update 
  script. 
     function dispatch(path){ 
      window.location.href=path 
    }